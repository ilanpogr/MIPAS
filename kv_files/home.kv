<Home>:
    FloatLayout:
        canvas.before:
            Rectangle:
                source: 'resources/DIAMONDS-BANNER.png'
                size: root.width, self.height
                pos: 20, -70
        Label:
            pos_hint: {'x':0, 'y': 0.4}
            text: 'Let\'s make sure nobody uses your photos!'
            font_size: 30
        Label:
            pos_hint: {'x':-0.35, 'y': 0.2}
            text: '* Optional'
            color: (1,0,0,1)
            font_size: 12
        Label:
            pos_hint: {'x':-0.3, 'y': 0.15}
            text: 'Add your photos:'
            font_size: 20
        Button:
            size_hint: 0.1, 0.05
            pos_hint: {'x':0.3, 'y': 0.623}
            text: 'Browse'
            font_size: 15
            halign: 'center'
            valign: 'center'
        Button:
            id: start_btn
            text: 'START'
            pos_hint: {'center_x':0.5, 'y': 0.25}
            size_hint_y: None
            height: self.texture_size[1]
            width: 200
            font_size: 40
            bold: True
            halign: 'center'
            valign: 'center'
            color: (1,1,1,0.3) if self.state == 'normal' else (1,1,1,1)
            background_color: (1, 1, 1, 0.6) if self.state == 'normal' else (1,1,0.2,1)
            on_release: root.manager.switch_to_runtime()
