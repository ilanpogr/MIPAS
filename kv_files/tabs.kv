<Tabs@TabbedPanel>:
    tab_width: root.width / 2 - 1
    pos_hint: {'center_x': 0.498, 'center_y': 0.36}
    do_default_tab: False
    TabbedPanelItem:
        id: main_tab
        color: (1,1,1,1) if self.state == 'normal' else (0,1,1,1)
        background_color: (1,1,1,1) if self.state == 'normal' else (0.8,0.8,0.8,1)
        text: 'Home'
        MainScreenManager:
            id: main_screen_manager

    TabbedPanelItem:
        color: (1,1,1,1) if self.state == 'normal' else (0,1,1,1)
        background_color: (1,1,1,1) if self.state == 'normal' else (0.8,0.8,0.8,1)
        tab_width: root.width / 2 - 1
        text: 'History'
        Label:
            text: 'HERE IS GOING TO BE A REPORT TABLE / "NO PREVIOUS RUN FOUND" IN TEXT'